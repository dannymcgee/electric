{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@electric/compiler": ["packages/build/compiler/src/index.ts"],
			"@electric/comptime-decorators": ["packages/build/comptime-decorators/src/index.ts"],
			"@electric/comptime-decorators-e2e": ["packages/build/comptime-decorators-e2e/src/index.ts"],

			"@electric/components": ["packages/core/components/src/index.ts"],
			"@electric/framework": ["packages/core/framework/src/index.ts"],

			"@electric/assert-type": ["packages/util/assert-type/src/index.ts"],
			"@electric/exists": ["packages/util/exists/src/index.ts"],
			"@electric/match": ["packages/util/match/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
