{
	"$schema": "../../../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"distDir": "../../../dist/apps/reader",
		"devPath": "http://localhost:4200/",
		"beforeDevCommand": "nx serve reader",
		"beforeBuildCommand": "nx build reader"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"fs": {
				"all": true,
				"scope": ["**"]
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": ["**"]
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "dev.dannymcgee.elx-reader",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"resources": [],
			"externalBin": [],
			"copyright": "",
			"category": "DeveloperTool",
			"shortDescription": "",
			"longDescription": "",
			"deb": {
			  "depends": []
			},
			"macOS": {
			  "frameworks": [],
			  "minimumSystemVersion": "",
			  "exceptionDomain": "",
			  "signingIdentity": null,
			  "entitlements": null
			},
			"windows": {
			  "certificateThumbprint": null,
			  "digestAlgorithm": "sha256",
			  "timestampUrl": ""
			}
		},
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
		},
		"updater": {
			"active": false
		},
		"windows": [{
			"title": "Reader",
			"width": 1080,
			"height": 600,
			"minWidth": 640,
			"minHeight": 360,
			"resizable": true,
			"fullscreen": false,
			"decorations": false,
			"transparent": true
		}]
	}
}
