{
	"projectType": "application",
	"root": "apps/reader",
	"sourceRoot": "apps/reader/src",
	"prefix": "r",
	"targets": {
		"build": {
			"executor": "@angular-devkit/build-angular:browser",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/apps/reader",
				"index": "apps/reader/src/index.html",
				"main": "apps/reader/src/main.ts",
				"polyfills": "apps/reader/src/polyfills.ts",
				"tsConfig": "apps/reader/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					"apps/reader/src/favicon.ico",
					"apps/reader/src/assets",
					{
						"input": "packages/style/src/assets",
						"glob": "**/*",
						"output": "assets/elx"
					}
				],
				"styles": [
					"packages/style/src/assets/fonts.css",
					"packages/style/src/globals.scss",
					"apps/reader/src/styles.scss"
				],
				"stylePreprocessorOptions": {
					"includePaths": ["node_modules", "packages/style/src"]
				},
				"scripts": []
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "500kb",
							"maximumError": "1mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "2kb",
							"maximumError": "4kb"
						}
					],
					"fileReplacements": [
						{
							"replace": "apps/reader/src/environments/environment.ts",
							"with": "apps/reader/src/environments/environment.prod.ts"
						}
					],
					"outputHashing": "all"
				},
				"development": {
					"buildOptimizer": false,
					"optimization": false,
					"vendorChunk": true,
					"extractLicenses": false,
					"sourceMap": true,
					"namedChunks": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"executor": "@angular-devkit/build-angular:dev-server",
			"configurations": {
				"production": {
					"browserTarget": "reader:build:production"
				},
				"development": {
					"browserTarget": "reader:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"launch": {
			"executor": "@nrwl/workspace:run-commands",
			"options": {
				"command": "tauri dev",
				"cwd": "apps/reader",
				"color": true
			}
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "reader:build"
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": [
					"apps/reader/src/**/*.ts",
					"apps/reader/src/**/*.html"
				]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["coverage/apps/reader"],
			"options": {
				"jestConfig": "apps/reader/jest.config.js",
				"passWithNoTests": true
			}
		}
	},
	"tags": []
}
